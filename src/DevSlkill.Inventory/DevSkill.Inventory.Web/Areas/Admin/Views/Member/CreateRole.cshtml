@model RoleCreateModel

@{
    ViewData["Title"] = "Create Role";
    <link rel="stylesheet" href="~/css/CreateRole.css" />

}

<div class="container bg-white d-flex justify-content-center" style="width: 30%; border-radius: 12px; margin-top: 40px;margin-bottom:300px">
    <div class="card-body">
        <section>
        <p class="text-center" style="font-size:20px; font:bold">Create Role</p>        
            <form asp-antiforgery="true" asp-area="Admin" asp-controller="Member" asp-action="CreateRole" method="post">
                <partial name="_ResponsePartial" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <input type="text" asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-info" style="width:100%">Submit</button>
                </div>
            </form>
        </section>
    </div>
 
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}