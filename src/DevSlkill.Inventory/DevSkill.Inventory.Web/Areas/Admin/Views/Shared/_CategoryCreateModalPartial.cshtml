@model CategoryCreateModel

<div class="modal" id="createCategoryModal" tabindex="-1" role="dialog" aria-labelledby="createCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCategoryModalLabel">Manage Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Category Name *</p>
                <form id="createCategoryForm">
                    <div class="form-group">
                        <input type="text" class="form-control" id="Name" name="Name" required />
                    </div>
                    <div id="form-errors" class="text-danger"></div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
            <div class="modal-footer">
                <div class="col text-start">
                    <button type="button" id="submitCategoryForm" class="btn btn-success btn-sm">
                        <i class="fas fa-save"></i>
                        Save
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">
                        <i class="bi bi-x-circle"></i>
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>